{% comment %}
  HypeHeat Mobile Header
  Visible only on mobile. Desktop uses the sidebar for navigation.
{% endcomment %}

<header class="mobile-header">
  <button class="mobile-header__hamburger" id="SidebarOpen" aria-label="Open menu">
    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <line x1="3" y1="6" x2="21" y2="6"></line>
      <line x1="3" y1="12" x2="21" y2="12"></line>
      <line x1="3" y1="18" x2="21" y2="18"></line>
    </svg>
  </button>

  <a href="{{ routes.root_url }}" class="mobile-header__logo">
    {{ shop.name }}
  </a>

  <div class="mobile-header__icons">
    <button type="button" class="mobile-header__icon js-search-trigger" aria-label="Search">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="20" height="20">
        <circle cx="11" cy="11" r="8"></circle>
        <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
      </svg>
    </button>

    {% if shop.customer_accounts_enabled %}
      <a href="{{ routes.account_url }}" class="mobile-header__icon" aria-label="Account">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="20" height="20">
          <path d="M20 21v-2a4 4 0 00-4-4H8a4 4 0 00-4 4v2"></path>
          <circle cx="12" cy="7" r="4"></circle>
        </svg>
      </a>
    {% endif %}

    <a href="{{ routes.cart_url }}" class="mobile-header__cart" id="CartDrawerTriggerMobile" aria-label="Open cart">
    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M6 2L3 6v14a2 2 0 002 2h14a2 2 0 002-2V6l-3-4z"></path>
      <line x1="3" y1="6" x2="21" y2="6"></line>
      <path d="M16 10a4 4 0 01-8 0"></path>
    </svg>
      <span class="mobile-header__cart-count js-cart-count" {% if cart.item_count == 0 %}style="display:none"{% endif %}>
        {{ cart.item_count }}
      </span>
    </a>
  </div>
</header>

{% schema %}
{
  "name": "Mobile Header",
  "settings": []
}
{% endschema %}
