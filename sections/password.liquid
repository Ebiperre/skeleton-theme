{% comment %}
  HypeHeat Password Page
  Branded coming-soon / password-protected landing.
{% endcomment %}

<div class="password-page">
  <div class="password-page__brand">
    <p class="password-page__logo">{{ shop.name }}</p>
  </div>

  <h1 class="password-page__heading">{{ section.settings.heading | default: 'Coming Soon' }}</h1>

  {% if shop.password_message != blank %}
    <p class="password-page__message">{{ shop.password_message }}</p>
  {% else %}
    <p class="password-page__message">{{ section.settings.subtext | default: 'We are working on something fire. Stay tuned.' }}</p>
  {% endif %}

  {% form 'storefront_password' %}
    {% if form.errors %}
      <div class="password-page__error">{{ form.errors | default_errors }}</div>
    {% endif %}

    <div class="password-page__form">
      <input
        type="password"
        name="password"
        id="password-input"
        placeholder="Enter password"
        class="password-page__input"
        required
      >
      <button type="submit" class="btn btn--primary password-page__btn">Enter</button>
    </div>
  {% endform %}

  <p class="password-page__owner">Are you the store owner? <a href="/admin">Log in here</a></p>
</div>

{% schema %}
{
  "name": "Password",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Coming Soon"
    },
    {
      "type": "textarea",
      "id": "subtext",
      "label": "Subtext",
      "default": "We are working on something fire. Stay tuned."
    }
  ]
}
{% endschema %}
