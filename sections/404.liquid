{% endcomment %}

<div class="error-page">
  <p class="error-page__code">404</p>
  <h1 class="error-page__heading">Page Not Found</h1>
  <p class="error-page__text">The page you're looking for doesn't exist or has been moved.</p>
  <a href="{{ routes.all_products_collection_url }}" class="btn btn--primary error-page__cta">Back to Shop</a>
</div>

