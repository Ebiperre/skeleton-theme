{% comment %}
  Category Grid — visual collection links in a row
{% endcomment %}

<div class="category-grid full-width">
  <div class="category-grid__inner">
    {% for block in section.blocks %}
      <a href="{{ block.settings.link }}" class="category-grid__item" {{ block.shopify_attributes }}>
        {% if block.settings.image != blank and block.settings.image.src != blank %}
          {{ block.settings.image | image_url: width: 400, height: 500, crop: 'center' | image_tag: class: 'category-grid__img', loading: 'lazy' }}
        {% elsif block.settings.asset_image != blank %}
          <img src="{{ block.settings.asset_image | asset_url }}" alt="{{ block.settings.title }}" class="category-grid__img" loading="lazy">
        {% else %}
          <div class="category-grid__placeholder"></div>
        {% endif %}
        <span class="category-grid__label">
          {{ block.settings.title }}
          {% if block.settings.count != blank %}
            <sup class="category-grid__count">{{ block.settings.count }}</sup>
          {% endif %}
        </span>
      </a>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Category Grid",
  "settings": [],
  "blocks": [
    {
      "type": "category",
      "name": "Category",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Category"
        },
        {
          "type": "text",
          "id": "count",
          "label": "Product count (optional)"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "asset_image",
          "label": "Asset image filename (fallback)",
          "info": "e.g. shoes.png — used if no Image is picked above"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Category Grid",
      "blocks": [
        { "type": "category", "settings": { "title": "Hoodies" } },
        { "type": "category", "settings": { "title": "Jackets" } },
        { "type": "category", "settings": { "title": "Sweatpants" } },
        { "type": "category", "settings": { "title": "T-Shirts" } }
      ]
    }
  ],
  "disabled_on": {
    "groups": ["header", "footer"]
  }
}
{% endschema %}
