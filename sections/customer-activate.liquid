{% comment %}
  HypeHeat Customer Account Activation
{% endcomment %}

<div class="customer-page">
  <h1 class="customer-page__title">Activate Account</h1>
  <p class="customer-page__note">Create your password to activate your account.</p>

  <div class="customer-page__form-wrap">
    {% form 'activate_customer_password' %}
      {% if form.errors %}
        <div class="customer-page__error">
          {{ form.errors | default_errors }}
        </div>
      {% endif %}

      <div class="customer-page__field">
        <label for="ActivatePassword" class="customer-page__label">Password</label>
        <input
          type="password"
          name="customer[password]"
          id="ActivatePassword"
          class="customer-page__input"
          autocomplete="new-password"
          required
        >
      </div>

      <div class="customer-page__field">
        <label for="ActivatePasswordConfirm" class="customer-page__label">Confirm Password</label>
        <input
          type="password"
          name="customer[password_confirmation]"
          id="ActivatePasswordConfirm"
          class="customer-page__input"
          autocomplete="new-password"
          required
        >
      </div>

      <button type="submit" class="btn btn--primary customer-page__submit">Activate Account</button>
      <a href="{{ routes.account_login_url }}" class="customer-page__link" style="margin-top: 12px; display: inline-block;">Decline Invitation</a>
    {% endform %}
  </div>
</div>

{% schema %}
{
  "name": "Customer Activate",
  "settings": []
}
{% endschema %}
