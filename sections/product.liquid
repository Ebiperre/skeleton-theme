{% comment %}
  HypeHeat Product Detail Page — "The Drop" Layout
  Vertical image scroll (left) + sticky info column (right).
  Variant buttons, collapsible info, trust badges, mobile swipe gallery.
{% endcomment %}

{%- assign current_variant = product.selected_or_first_available_variant -%}

<div class="pdp full-width">

  {%- comment -%} ——— IMAGE GALLERY ——— {%- endcomment -%}
  <div class="pdp__images">
    <div class="pdp__gallery" id="PdpGallery">
      {% for image in product.images %}
        <div class="pdp__gallery-slide" data-index="{{ forloop.index0 }}">
          {{ image | image_url: width: 1200 | image_tag:
            class: 'pdp__image',
            loading: 'lazy',
            sizes: '(min-width: 768px) 55vw, 100vw'
          }}
        </div>
      {% endfor %}
    </div>

    {% if product.images.size > 1 %}
      <div class="pdp__gallery-dots" id="PdpGalleryDots">
        {% for image in product.images %}
          <button
            class="pdp__gallery-dot{% if forloop.first %} is-active{% endif %}"
            data-index="{{ forloop.index0 }}"
            aria-label="Go to image {{ forloop.index }}"
          ></button>
        {% endfor %}
      </div>
    {% endif %}
  </div>

  {%- comment -%} ——— PRODUCT INFO (sticky on desktop) ——— {%- endcomment -%}
  <div class="pdp__info">
    <h1 class="pdp__title">{{ product.title }}</h1>

    <div class="pdp__badges">
      {% if section.settings.show_limited_badge %}
        <span class="pdp__badge">{{ section.settings.badge_text | default: 'Limited Edition' }}</span>
      {% endif %}
      {% unless product.available %}
        <span class="pdp__badge pdp__badge--soldout">Sold Out</span>
      {% endunless %}
    </div>

    <div class="pdp__price" id="ProductPrice">
      {% if current_variant.compare_at_price > current_variant.price %}
        <span class="pdp__price-compare" id="ProductComparePrice">{{ current_variant.compare_at_price | money }}</span>
      {% endif %}
      <span id="ProductCurrentPrice">{{ current_variant.price | money }}</span>
    </div>

    {% if section.settings.show_limit_text %}
      <div class="pdp__limit">{{ section.settings.limit_text | default: 'Limit 1 per customer' }}</div>
    {% endif %}

    {% if section.settings.show_fomo_viewers or section.settings.show_fomo_cart %}
      <div class="pdp__fomo">
        {% if section.settings.show_fomo_viewers %}
          <div class="pdp__fomo-item">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="16" height="16" aria-hidden="true">
              <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
              <circle cx="12" cy="12" r="3"></circle>
            </svg>
            <span class="pdp__fomo-pulse" aria-hidden="true"></span>
            <span><strong id="FomoViewerCount">0</strong> people viewing this right now</span>
          </div>
        {% endif %}
        {% if section.settings.show_fomo_cart %}
          <div class="pdp__fomo-item">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="16" height="16" aria-hidden="true">
              <path d="M6 2L3 6v14a2 2 0 002 2h14a2 2 0 002-2V6l-3-4z"></path>
              <line x1="3" y1="6" x2="21" y2="6"></line>
              <path d="M16 10a4 4 0 01-8 0"></path>
            </svg>
            <span><strong id="FomoCartCount">0</strong> added to cart in the last 24 hours</span>
          </div>
        {% endif %}
      </div>
    {% endif %}

    {%- comment -%} ——— LOW STOCK INDICATOR ——— {%- endcomment -%}
    {% if section.settings.show_low_stock %}
      <div class="pdp__low-stock" id="PdpLowStock"
        data-threshold="{{ section.settings.low_stock_threshold | default: 10 }}"
        style="display: none;"
      >
        <span class="pdp__low-stock-pulse" aria-hidden="true"></span>
        <span>Only <strong id="PdpLowStockCount">0</strong> left in stock</span>
      </div>
    {% endif %}

    {%- comment -%} ——— VARIANT BUTTONS ——— {%- endcomment -%}
    {% form 'product', product, id: 'ProductForm', data-ajax-cart: 'true' %}

      {%- comment -%} Hidden select that the JS keeps in sync {%- endcomment -%}
      <select name="id" id="ProductVariantSelect" class="visually-hidden" aria-hidden="true">
        {% for variant in product.variants %}
          <option
            value="{{ variant.id }}"
            {% if variant == current_variant %}selected{% endif %}
            {% unless variant.available %}disabled{% endunless %}
          >{{ variant.title }}</option>
        {% endfor %}
      </select>

      {% if product.has_only_default_variant == false %}
        <div class="pdp__options" id="PdpOptions">
          {% for option in product.options_with_values %}
            <fieldset class="pdp__option-group">
              <legend class="pdp__option-label">
                {{ option.name }}
                <span class="pdp__option-selected" id="OptionSelected-{{ forloop.index }}">{{ option.selected_value }}</span>
              </legend>
              <div class="pdp__option-buttons">
                {% for value in option.values %}
                  {%- assign is_selected = false -%}
                  {%- if value == option.selected_value -%}{%- assign is_selected = true -%}{%- endif -%}
                  <button
                    type="button"
                    class="pdp__option-btn{% if is_selected %} is-selected{% endif %}"
                    data-option-position="{{ option.position }}"
                    data-value="{{ value }}"
                    aria-pressed="{{ is_selected }}"
                  >
                    {{ value }}
                  </button>
                {% endfor %}
              </div>
            </fieldset>
          {% endfor %}
        </div>
      {% endif %}

      <div class="pdp__quantity">
        <label class="pdp__option-label" for="ProductQuantity">Quantity</label>
        <div class="pdp__quantity-wrap">
          <button type="button" class="pdp__quantity-btn" data-qty-dir="-1" aria-label="Decrease quantity">&minus;</button>
          <input
            type="number"
            name="quantity"
            id="ProductQuantity"
            class="pdp__quantity-input"
            min="1"
            max="{{ section.settings.max_quantity | default: 1 }}"
            value="1"
          >
          <button type="button" class="pdp__quantity-btn" data-qty-dir="1" aria-label="Increase quantity">+</button>
        </div>
      </div>

      <div id="PdpAddBtnWrap">
        {% if current_variant.available %}
          <button type="submit" class="btn btn--primary pdp__add-btn" id="PdpAddBtn">
            {{ section.settings.add_button_text | default: 'Add to Drop' }}
          </button>
        {% else %}
          <button type="button" class="btn btn--secondary pdp__add-btn" id="PdpAddBtn" disabled>
            Sold Out
          </button>
        {% endif %}
      </div>

      {% if section.settings.show_dynamic_checkout %}
        <div class="pdp__payment-buttons">
          {{ form | payment_button }}
        </div>
      {% endif %}
    {% endform %}

    {%- comment -%} ——— TRUST BADGES ——— {%- endcomment -%}
    {% if section.settings.show_trust_badges %}
      <div class="pdp__trust">
        <div class="pdp__trust-item">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" width="20" height="20"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect><path d="M7 11V7a5 5 0 0110 0v4"></path></svg>
          <span>Secure Checkout</span>
        </div>
        <div class="pdp__trust-item">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" width="20" height="20"><rect x="1" y="3" width="15" height="13"></rect><polygon points="16 8 20 8 23 11 23 16 16 16 16 8"></polygon><circle cx="5.5" cy="18.5" r="2.5"></circle><circle cx="18.5" cy="18.5" r="2.5"></circle></svg>
          <span>Free Shipping Over ${{ settings.free_shipping_threshold | default: 150 }}</span>
        </div>
        <div class="pdp__trust-item">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" width="20" height="20"><polyline points="23 4 23 10 17 10"></polyline><path d="M20.49 15a9 9 0 11-2.12-9.36L23 10"></path></svg>
          <span>Easy Returns</span>
        </div>
      </div>
    {% endif %}

    {%- comment -%} ——— COLLAPSIBLE SECTIONS ——— {%- endcomment -%}
    <div class="pdp__accordion">
      {% if product.description != blank %}
        <details class="pdp__accordion-item" open>
          <summary class="pdp__accordion-header">
            Description
            <svg class="pdp__accordion-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="16" height="16"><polyline points="6 9 12 15 18 9"></polyline></svg>
          </summary>
          <div class="pdp__accordion-body">{{ product.description }}</div>
        </details>
      {% endif %}

      {% if section.settings.shipping_info != blank %}
        <details class="pdp__accordion-item">
          <summary class="pdp__accordion-header">
            Shipping & Delivery
            <svg class="pdp__accordion-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="16" height="16"><polyline points="6 9 12 15 18 9"></polyline></svg>
          </summary>
          <div class="pdp__accordion-body">{{ section.settings.shipping_info }}</div>
        </details>
      {% endif %}

      {% if section.settings.returns_info != blank %}
        <details class="pdp__accordion-item">
          <summary class="pdp__accordion-header">
            Returns & Exchanges
            <svg class="pdp__accordion-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="16" height="16"><polyline points="6 9 12 15 18 9"></polyline></svg>
          </summary>
          <div class="pdp__accordion-body">{{ section.settings.returns_info }}</div>
        </details>
      {% endif %}
    </div>

    {%- comment -%} ——— REVIEWS ——— {%- endcomment -%}
    {% if section.settings.show_reviews %}
      <div class="pdp__reviews" id="ProductReviews" data-review-count="{{ section.settings.reviews_count | default: 5 }}">
        <div class="pdp__reviews-header">
          <h3 class="pdp__reviews-title">Customer Reviews</h3>
          <div class="pdp__reviews-summary">
            <span class="pdp__reviews-stars" aria-label="5 out of 5 stars">&#9733;&#9733;&#9733;&#9733;&#9733;</span>
            <span class="pdp__reviews-avg">5.0</span>
            <span class="pdp__reviews-count">(<span id="ReviewTotalCount">0</span> reviews)</span>
          </div>
        </div>
        <div class="pdp__reviews-list" id="ReviewsList"></div>
      </div>
    {% endif %}
  </div>
</div>

{%- comment -%} ——— STICKY ADD-TO-CART BAR (mobile) ——— {%- endcomment -%}
<div class="pdp__sticky-bar" id="PdpStickyBar">
  <div class="pdp__sticky-bar-info">
    <span class="pdp__sticky-bar-title">{{ product.title }}</span>
    <span class="pdp__sticky-bar-price" id="PdpStickyPrice">{{ current_variant.price | money }}</span>
  </div>
  <button type="button" class="btn btn--primary pdp__sticky-bar-btn" id="PdpStickyBtn">
    {{ section.settings.add_button_text | default: 'Add to Drop' }}
  </button>
</div>

{%- comment -%} Inject product JSON for variant JS {%- endcomment -%}
<script>
  window.__productJSON = {{ product | json }};
</script>

{% schema %}
{
  "name": "Product — The Drop",
  "settings": [
    {
      "type": "header",
      "content": "Badges"
    },
    {
      "type": "checkbox",
      "id": "show_limited_badge",
      "label": "Show limited edition badge",
      "default": true
    },
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge text",
      "default": "Limited Edition"
    },
    {
      "type": "header",
      "content": "Urgency"
    },
    {
      "type": "checkbox",
      "id": "show_limit_text",
      "label": "Show purchase limit text",
      "default": true
    },
    {
      "type": "text",
      "id": "limit_text",
      "label": "Limit text",
      "default": "Limit 1 per customer"
    },
    {
      "type": "range",
      "id": "max_quantity",
      "label": "Max quantity per order",
      "min": 1,
      "max": 10,
      "step": 1,
      "default": 1
    },
    {
      "type": "checkbox",
      "id": "show_low_stock",
      "label": "Show low stock indicator",
      "default": true,
      "info": "Shows 'Only X left' when inventory is below threshold"
    },
    {
      "type": "range",
      "id": "low_stock_threshold",
      "label": "Low stock threshold",
      "min": 3,
      "max": 50,
      "step": 1,
      "default": 10,
      "info": "Show indicator when stock falls below this number"
    },
    {
      "type": "header",
      "content": "Social Proof"
    },
    {
      "type": "checkbox",
      "id": "show_fomo_viewers",
      "label": "Show live viewer count",
      "default": true,
      "info": "Displays 'X people viewing this right now'"
    },
    {
      "type": "checkbox",
      "id": "show_fomo_cart",
      "label": "Show cart activity count",
      "default": true,
      "info": "Displays 'X added to cart in the last 24 hours'"
    },
    {
      "type": "checkbox",
      "id": "show_reviews",
      "label": "Show customer reviews",
      "default": true,
      "info": "Displays randomly generated 5-star reviews"
    },
    {
      "type": "range",
      "id": "reviews_count",
      "label": "Number of reviews to show",
      "min": 3,
      "max": 10,
      "step": 1,
      "default": 5
    },
    {
      "type": "header",
      "content": "Trust Badges"
    },
    {
      "type": "checkbox",
      "id": "show_trust_badges",
      "label": "Show trust badges",
      "default": true,
      "info": "Secure Checkout, Free Shipping, Easy Returns"
    },
    {
      "type": "header",
      "content": "Product Info (Accordion)"
    },
    {
      "type": "richtext",
      "id": "shipping_info",
      "label": "Shipping & Delivery info",
      "default": "<p>Free standard shipping on orders over $150. Orders ship within 1-2 business days. Express shipping available at checkout.</p>"
    },
    {
      "type": "richtext",
      "id": "returns_info",
      "label": "Returns & Exchanges info",
      "default": "<p>We accept returns within 14 days of delivery. Items must be unworn with original tags attached. Final sale items are not eligible for return.</p>"
    },
    {
      "type": "header",
      "content": "Button"
    },
    {
      "type": "text",
      "id": "add_button_text",
      "label": "Add to cart button text",
      "default": "Add to Drop"
    },
    {
      "type": "checkbox",
      "id": "show_dynamic_checkout",
      "label": "Show dynamic checkout button",
      "default": true,
      "info": "Shows Apple Pay, Google Pay, etc. when available"
    }
  ],
  "disabled_on": {
    "groups": ["header", "footer"]
  }
}
{% endschema %}
