{% comment %}
  HypeHeat Footer
  Dark footer with policy links, newsletter signup, and social icons.
{% endcomment %}

<footer class="site-footer">
  <div class="site-footer__inner">
    <div class="site-footer__col site-footer__col--links">
      {% for link in section.settings.menu.links %}
        <a href="{{ link.url }}">{{ link.title }}</a>
      {% endfor %}
    </div>

    <div class="site-footer__col site-footer__col--links">
      {% for link in section.settings.menu_2.links %}
        <a href="{{ link.url }}">{{ link.title }}</a>
      {% endfor %}
    </div>

    <div class="site-footer__col site-footer__col--newsletter">
      {% if section.settings.newsletter_heading != blank %}
        <p class="site-footer__newsletter-heading">{{ section.settings.newsletter_heading }}</p>
      {% endif %}
      {% if section.settings.newsletter_text != blank %}
        <p class="site-footer__newsletter-text">{{ section.settings.newsletter_text }}</p>
      {% endif %}
      {% form 'customer', id: 'footer-newsletter' %}
        <div class="site-footer__newsletter-form">
          <input
            type="email"
            name="contact[email]"
            placeholder="Email address"
            required
            autocomplete="email"
            class="site-footer__newsletter-input"
          >
          <button type="submit" class="site-footer__newsletter-btn" aria-label="Subscribe">
            &rarr;
          </button>
        </div>
        {% if form.posted_successfully? %}
          <p class="site-footer__newsletter-success">Thanks for subscribing.</p>
        {% endif %}
        <input type="hidden" name="contact[tags]" value="newsletter">
      {% endform %}
    </div>
  </div>

  <div class="site-footer__bottom">
    <div class="site-footer__copyright">
      &copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. Powered by Shopify.
    </div>

    {% if section.settings.show_payment_icons %}
      <div class="site-footer__payment">
        {% for type in shop.enabled_payment_types %}
          {{ type | payment_type_svg_tag }}
        {% endfor %}
      </div>
    {% endif %}

    {% if section.settings.show_social %}
      <div class="site-footer__social">
        {% if section.settings.social_instagram != blank %}
          <a href="{{ section.settings.social_instagram }}" target="_blank" rel="noopener" aria-label="Instagram">IG</a>
        {% endif %}
        {% if section.settings.social_tiktok != blank %}
          <a href="{{ section.settings.social_tiktok }}" target="_blank" rel="noopener" aria-label="TikTok">TK</a>
        {% endif %}
        {% if section.settings.social_twitter != blank %}
          <a href="{{ section.settings.social_twitter }}" target="_blank" rel="noopener" aria-label="X">X</a>
        {% endif %}
      </div>
    {% endif %}
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "header",
      "content": "Links"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Footer menu (column 1)"
    },
    {
      "type": "link_list",
      "id": "menu_2",
      "label": "Footer menu (column 2)"
    },
    {
      "type": "header",
      "content": "Newsletter"
    },
    {
      "type": "text",
      "id": "newsletter_heading",
      "label": "Heading",
      "default": "STAY IN THE SILENCE"
    },
    {
      "type": "textarea",
      "id": "newsletter_text",
      "label": "Text",
      "default": "No spam. No noise. Just quiet drops, once in a while."
    },
    {
      "type": "header",
      "content": "Social"
    },
    {
      "type": "checkbox",
      "id": "show_social",
      "label": "Show social links",
      "default": true
    },
    {
      "type": "url",
      "id": "social_instagram",
      "label": "Instagram URL"
    },
    {
      "type": "url",
      "id": "social_tiktok",
      "label": "TikTok URL"
    },
    {
      "type": "url",
      "id": "social_twitter",
      "label": "X (Twitter) URL"
    },
    {
      "type": "header",
      "content": "Payments"
    },
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "label": "Show payment icons",
      "default": true
    }
  ]
}
{% endschema %}
