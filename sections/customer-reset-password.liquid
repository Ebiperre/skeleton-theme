{% comment %}
  HypeHeat Customer Password Reset
{% endcomment %}

<div class="customer-page">
  <h1 class="customer-page__title">Reset Password</h1>
  <p class="customer-page__note">Enter your new password below.</p>

  <div class="customer-page__form-wrap">
    {% form 'reset_customer_password' %}
      {% if form.errors %}
        <div class="customer-page__error">
          {{ form.errors | default_errors }}
        </div>
      {% endif %}

      <div class="customer-page__field">
        <label for="ResetPassword" class="customer-page__label">Password</label>
        <input
          type="password"
          name="customer[password]"
          id="ResetPassword"
          class="customer-page__input"
          autocomplete="new-password"
          required
        >
      </div>

      <div class="customer-page__field">
        <label for="ResetPasswordConfirm" class="customer-page__label">Confirm Password</label>
        <input
          type="password"
          name="customer[password_confirmation]"
          id="ResetPasswordConfirm"
          class="customer-page__input"
          autocomplete="new-password"
          required
        >
      </div>

      <button type="submit" class="btn btn--primary customer-page__submit">Reset Password</button>
    {% endform %}
  </div>
</div>

{% schema %}
{
  "name": "Customer Reset Password",
  "settings": []
}
{% endschema %}
