{% comment %}
  HypeHeat Hero Banner
  Full-width dark hero with large heading and CTA.
{% endcomment %}

<section
  class="hero full-width"
  style="min-height: var(--section-height-{{ section.settings.section_height }});"
>
  {% if section.settings.background_image %}
    {{ section.settings.background_image | image_url: width: 1920 | image_tag:
      class: 'hero__bg',
      loading: 'eager',
      fetchpriority: 'high',
      sizes: '100vw'
    }}
  {% else %}
    <img src="{{ 'hero.png' | asset_url }}" alt="" class="hero__bg" loading="eager" fetchpriority="high">
  {% endif %}

  <div class="hero__content">
    {% if section.settings.subtitle != blank %}
      <p class="hero__subtitle">{{ section.settings.subtitle }}</p>
    {% endif %}

    <h1 class="hero__title">{{ section.settings.heading | default: 'The Drop Is Live' }}</h1>

    {% if section.settings.button_text != blank %}
      <a
        href="{{ section.settings.button_url | default: routes.all_products_collection_url }}"
        class="btn btn--{{ section.settings.button_style }} hero__cta"
      >
        {{ section.settings.button_text }}
      </a>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "header",
      "content": "Media"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image"
    },
    {
      "type": "select",
      "id": "section_height",
      "label": "Section height",
      "options": [
        { "value": "small", "label": "Small" },
        { "value": "medium", "label": "Medium" },
        { "value": "large", "label": "Large" }
      ],
      "default": "large"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "New Season"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Drop Is Live"
    },
    {
      "type": "header",
      "content": "Button"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Shop the Drop"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button link"
    },
    {
      "type": "select",
      "id": "button_style",
      "label": "Button style",
      "options": [
        { "value": "primary", "label": "Primary (filled)" },
        { "value": "secondary", "label": "Secondary (outline)" }
      ],
      "default": "primary"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner"
    }
  ],
  "disabled_on": {
    "groups": ["header", "footer"]
  }
}
{% endschema %}
