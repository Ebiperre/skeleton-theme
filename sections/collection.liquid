  2 columns mobile / 4 columns desktop with product cards.
{% endcomment %}

<div class="collection-header full-width">
  <nav class="breadcrumbs" aria-label="Breadcrumb">
    <ol class="breadcrumbs__list">
      <li class="breadcrumbs__item"><a href="{{ routes.root_url }}">Home</a></li>
      <li class="breadcrumbs__item breadcrumbs__item--current" aria-current="page">{{ collection.title }}</li>
    </ol>
  </nav>
  <h1 class="collection-header__title">{{ collection.title }}</h1>
</div>

<div class="collection-grid full-width">
  {% paginate collection.products by 20 %}
    {% for product in collection.products %}
      {% render 'product-card', product: product %}
    {% endfor %}

    {% if paginate.pages > 1 %}
      <div class="collection-grid__pagination">
        {{ paginate | default_pagination }}
      </div>
    {% endif %}
  {% endpaginate %}
</div>

{% schema %}
{
  "name": "Collection Grid",
  "settings": []
}
{% endschema %}
