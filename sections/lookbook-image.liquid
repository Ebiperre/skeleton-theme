{% comment %}
  Lookbook Image â€” full-width editorial/lifestyle image with optional text overlay
{% endcomment %}

<div class="lookbook-image full-width">
  <div class="lookbook-image__media">
    {% if section.settings.image != blank %}
      {{ section.settings.image | image_url: width: 1920 | image_tag: class: 'lookbook-image__img', loading: 'lazy', sizes: '100vw', alt: section.settings.heading }}
    {% else %}
      <div class="lookbook-image__placeholder"></div>
    {% endif %}
  </div>

  {% if section.settings.heading != blank or section.settings.text != blank %}
    <div class="lookbook-image__overlay">
      {% if section.settings.heading != blank %}
        <h2 class="lookbook-image__heading">{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.text != blank %}
        <p class="lookbook-image__text">{{ section.settings.text }}</p>
      {% endif %}
      {% if section.settings.button_text != blank %}
        <a href="{{ section.settings.button_link }}" class="lookbook-image__btn">{{ section.settings.button_text }}</a>
      {% endif %}
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Lookbook Image",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    }
  ],
  "presets": [
    {
      "name": "Lookbook Image"
    }
  ],
  "disabled_on": {
    "groups": ["header", "footer"]
  }
}
{% endschema %}
